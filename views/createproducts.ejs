<%- include('./partials/adminHeader.ejs') %>

<% if (success && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container px-5 lg:px-10 py-20 flex flex-grow">
        <div class="w-full lg:w-1/4 flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="/owners/admin">All Products</a>
                <a class="block w-fit mb-2" href="/owners/createproduct">Create new product</a>
            </div>
        </div>
        <main class="w-full lg:w-3/4 bg-white p-8 shadow ml-0 lg:ml-4">
            <h2 class="text-xl font-bold mb-4">Create New Product</h2>
            <form action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded border border-gray-300">
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full">
                        <input name="price" type="text" placeholder="Product Price" class="border p-2 rounded w-full">
                        <input name="discount" type="text" placeholder="Discount Price" class="border p-2 rounded w-full">
                    </div>
                </div>

                <div>
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <select name="bgcolor" class="border p-2 rounded w-full">
                            <option value="">Select Background Color</option>
                            <option value="#FADCD9">Red</option>
                            <option value="#B1D4E0">Blue</option>
                            <option value="#B1D8B7">Green</option>
                            <option value="#DDDEDC">Black</option>
                        </select>
                        <select name="panelcolor" class="border p-2 rounded w-full">
                            <option value="">Select Panel Color</option>
                            <option value="#F8AFA6">Red</option>
                            <option value="#2E8BC0">Blue</option>
                            <option value="#94C973">Green</option>
                            <option value="#000000">Black</option>
                        </select>
                    </div>
                </div>
                <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
