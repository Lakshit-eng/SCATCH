<%- include('./partials/header') %>

<% if (error && error.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col lg:flex-row px-5 lg:px-20 relative">

    <!-- Owner Login Button -->
    <div class="absolute top-5 right-5">
        <a href="/owners/" class="inline-block px-5 py-2 bg-blue-500 text-white rounded-full hover:bg-blue-700 transition duration-300">
            Owner Login
        </a>
    </div>

    <!-- Create Account Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center min-h-screen">
        <div class="w-full px-5 sm:px-10 lg:px-32">
            <h3 class="text-3xl sm:text-4xl">Welcome to <span class="text-blue-400 font-semibold">ShopIt</span></h3>
            <h4 class="text-xl sm:text-2xl mb-5">Create your account</h4>
            <form action="/users/register" method="post">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
                    type="text" placeholder="Full Name" name="fullname" required>
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
                    type="password" placeholder="Password" name="password" required>
                <p class="text-blue-500 text-xs">*At least one special char, number, and capital letter</p>
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white hover:bg-blue-700 transition duration-300" type="submit"
                    value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Login Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center min-h-screen">
        <div class="w-full px-5 sm:px-10 lg:px-32">
            <h4 class="text-xl sm:text-2xl capitalize mb-5">Login to your account</h4>
            <form action="/users/login" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
                    type="password" placeholder="Password" name="password" required>
                <input class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white hover:bg-blue-700 transition duration-300" type="submit"
                    value="Login">
            </form>
        </div>
    </div>

</div>

<%- include('./partials/footer') %>
